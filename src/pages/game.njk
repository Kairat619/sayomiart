 <div id="wrapper">
    
    
            {%- for post in collections.game | reverse -%}
			 {% if loop.index0 < 4 %}
        <article class="post">
                          
								<header>
									<div class="title">
										
										<h2><a href="{{ post.url }}">{{ post.data.title }} </a></h2>
										<p>{{ post.data.subtitle }} </p>
										
									</div>
									<div class="meta">
										<time class="published" datetime="">{{ post.data.date | postDate}}</time>
										<a href="#" class="author"><span class="name">{{ post.data.author }}</span><img src="{{ post.data.avatar }}" alt="" /></a>
									</div>
								</header>
								<a href="/single" class="image featured"><img src="{{ post.data.image }}" alt="" /></a>
								<p> {{ post.data.description }} </p>
								<footer>
									<ul class="actions">
										<li><a href="{{ post.url }}" class="button large">Continue Reading</a></li>
									</ul>
									<ul class="stats">
										<li><a href="#">General</a></li>
										<li><a href="#" class="icon solid fa-heart">28</a></li>
										
									</ul>
								</footer>
								
							</article>
       {%- endif %}
     {%- endfor %}
		
